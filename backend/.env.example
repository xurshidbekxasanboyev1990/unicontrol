# ====================
# APP CONFIGURATION
# ====================
APP_NAME=UniControl
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# ====================
# SERVER
# ====================
HOST=0.0.0.0
PORT=8000
WORKERS=4

# ====================
# DATABASE (PostgreSQL)
# ====================
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/unicontrol
DATABASE_ECHO=False

# ====================
# JWT AUTHENTICATION
# ====================
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ====================
# CORS
# ====================
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000","http://127.0.0.1:5173"]
CORS_ALLOW_CREDENTIALS=True

# ====================
# OPENAI API
# ====================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# ====================
# KUAF MUTOOLA API
# ====================
KUAF_API_BASE_URL=https://api.mutoola.kuaf.uz/v1
KUAF_API_KEY=your-kuaf-api-key-here
KUAF_API_SECRET=your-kuaf-api-secret-here
KUAF_SYNC_INTERVAL_MINUTES=30

# ====================
# FIREBASE (Mobile Push)
# ====================
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json
FIREBASE_PROJECT_ID=unicontrol-app

# ====================
# REDIS (Caching & Celery)
# ====================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ====================
# FILE STORAGE (S3 Compatible)
# ====================
S3_ENDPOINT_URL=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET_NAME=unicontrol-files
S3_REGION=uz-tashkent-1

# ====================
# EMAIL (SMTP)
# ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=UniControl
SMTP_FROM_EMAIL=noreply@unicontrol.uz

# ====================
# RATE LIMITING
# ====================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ====================
# LOGGING
# ====================
LOG_LEVEL=INFO
SENTRY_DSN=
