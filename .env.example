# UniControl Environment Variables
# ==================================
# Copy this file to .env and fill in your values

# Application
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars

# Database
DB_USER=unicontrol
DB_PASSWORD=CHANGE_ME_strong_password_here
DB_NAME=unicontrol
DB_HOST=localhost
DB_PORT=5432
DATABASE_URL=postgresql+asyncpg://unicontrol:CHANGE_ME_strong_password_here@localhost:5432/unicontrol

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# JWT
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OpenAI (for AI Analysis)
OPENAI_API_KEY=sk-your-openai-api-key

# KUAF Mutoola API
MUTOOLA_BASE_URL=https://api.mutoola.kuaf.uz
MUTOOLA_API_KEY=your-mutoola-api-key

# Firebase (for Push Notifications)
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# Ports
BACKEND_PORT=8000
FRONTEND_PORT=5173
ADMINER_PORT=8080

# Frontend (Vite)
VITE_API_URL=http://localhost:8000/api/v1
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_API_TIMEOUT=30000
VITE_DEMO_MODE=false
VITE_APP_NAME=Uni Control
VITE_APP_VERSION=1.0.0

# Telegram Bot
BOT_TOKEN=your-telegram-bot-token
